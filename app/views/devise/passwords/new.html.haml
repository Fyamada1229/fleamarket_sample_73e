= render "devise/shared/error_messages", resource: resource
#account-page.account-page
  = render "devise/registrations/header"
  .sign-in-page__inner
    .sign-in-page__inner__wrapper
      .sign-in-page__inner__wrapper__head
        %h2 パスワードをお忘れの方
      .sign-in-form
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          .sign-in-form__field
            .sign-in-form__field__label
              = f.label :メールアドレス
            .sign-in-form__field__input
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "ご登録されたメールアドレス"
              %p ご登録されたメールアドレスにパスワード再設定のご案内が送信されます。
          .sign-in-form__submit-btn
            = f.submit "送信する"
  = render "devise/registrations/footer"
