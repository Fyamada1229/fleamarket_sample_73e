#account-page.account-page
  = render "devise/registrations/header"
  .sign-in-page__inner
    .sign-in-page__inner__wrapper
      .sign-in-page__inner__wrapper__head
        %p アカウントをお持ちでない方はこちら
        %a{ href: '/users/sign_up', id: 'sign-up-btn' }
          新規会員登録
      .sns-log-in-form
        = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "sns-log-in-form__sns-btn", id: 'google-login' do
          Googleでログイン
          %i.fab.fa-google.fa-lg
        = link_to user_facebook_omniauth_authorize_path, method: :post, class: "sns-log-in-form__sns-btn", id: 'facebook-login' do
          Facebookでログイン
          %i.fab.fa-facebook-square.fa-lg
      .sign-in-form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .sign-in-form__field__input
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
          .sign-in-form__field__input
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
            .notification
              - flash.each do |key, value|
                = content_tag :div, value, class: key
          .sign-in-form__submit-btn
            = f.submit "ログイン"
        %a{ href: '/users/password/new', id: 'forget-password' }
          パスワードをお忘れの方
  = render "devise/registrations/footer"
