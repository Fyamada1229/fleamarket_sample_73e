#account-page.account-page
  .account-page__header
    %a{ href: '/', id: 'header__logo' }
      = image_tag 'material/logo/logo.png', alt: 'FURIMA', width: "200px"
    %nav.progress
      %ul.progress__bar
        %li.through#through
          会員情報
          .progress-status
          .progress-status_bar#through-bar
        %li.address#address#through
          お届け先住所入力
          .progress-status
          .progress-status_bar
        %li.end#end
          完了
          .progress-status
  .account-page__inner
    .account-page__inner__wrapper
      .account-page__inner__wrapper__head
        %h1 お届け先住所入力
      .user-form
        = form_for @address do |f|
          .user-form__field
            .user-form__field__label
              = f.label :送付先氏名（全角）
              %span.user-form__field__label__require 必須
            .user-form__field__name
              .user-form__field__input
                = f.text_field :first_name, autofocus: true, placeholder: "例）降間"
                - if @address.errors.include?(:first_name)
                  .alert__sign-up
                    = @address.errors.full_messages_for(:first_name).first
                - if @address.errors.include?(:last_name)
                  .alert__sign-up
                    = @address.errors.full_messages_for(:last_name).first
              .user-form__field__input
                = f.text_field :last_name, autofocus: true, placeholder: "例）太郎"
          .user-form__field
            .user-form__field__label
              = f.label :送付先氏名かな（全角）
              %span.user-form__field__label__require 必須
            .user-form__field__name
              .user-form__field__input
                = f.text_field :first_name_kana, autofocus: true, placeholder: "例）ふりま"
                - if @address.errors.include?(:first_name_kana)
                  .alert__sign-up
                    = @address.errors.full_messages_for(:first_name_kana).first
                - if @address.errors.include?(:last_name_kana)
                  .alert__sign-up
                    = @address.errors.full_messages_for(:last_name_kana).first
              .user-form__field__input
                = f.text_field :last_name_kana, autofocus: true, placeholder: "例）たろう"
          .user-form__field
            .user-form__field__label
              = f.label :郵便番号
              %span.user-form__field__label__require 必須
            .user-form__field__input
              = f.text_field :zipcode, autofocus: true, placeholder: "例）1234567"
              - if @address.errors.include?(:zipcode)
                .alert__sign-up
                  = @address.errors.full_messages_for(:zipcode).first
          .user-form__field
            .user-form__field__label
              = f.label :都道府県
              %span.user-form__field__label__require 必須
            .user-form__field__input
              = f.select :prefecture, Address.prefectures.keys, {}
              = icon 'fas', 'chevron-down',class:"user-form__field__input__icon4"
              - if @address.errors.include?(:prefecture)
                .alert__sign-up
                  = @address.errors.full_messages_for(:prefecture).first
          .user-form__field
            .user-form__field__label
              = f.label :市区町村
              %span.user-form__field__label__require 必須
            .user-form__field__input
              = f.text_field :city, autofocus: true, placeholder: "例）横浜市緑区"
              - if @address.errors.include?(:city)
                .alert__sign-up
                  = @address.errors.full_messages_for(:city).first
          .user-form__field
            .user-form__field__label
              = f.label :番地
              %span.user-form__field__label__require 必須
            .user-form__field__input
              = f.text_field :address, autofocus: true, placeholder: "例）青山1-1-1"
              - if @address.errors.include?(:address)
                .alert__sign-up
                  = @address.errors.full_messages_for(:address).first
          .user-form__field
            .user-form__field__label
              = f.label :建物名
              %span.user-form__field__label__optional 任意
            .user-form__field__input
              = f.text_field :address_other, autofocus: true, placeholder: "例）柳ビル103"
              - if @address.errors.include?(:address_other)
                .alert__sign-up
                  = @address.errors.full_messages_for(:address_other).first
          .user-form__field
            .user-form__field__label
              = f.label :電話
              %span.user-form__field__label__optional 任意
            .user-form__field__input
              = f.text_field :tell, autofocus: true, placeholder: "例）09012345678"
              - if @address.errors.include?(:tell)
                .alert__sign-up
                  = @address.errors.full_messages_for(:tell).first
          .user-form__submit-btn
            = f.submit "登録", class: 'btn'
  = render "devise/registrations/footer"
