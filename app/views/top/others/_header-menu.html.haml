%ul.header__contents__lower__left-items
  %li.header__contents__lower__left-items__categories
    = link_to '#' do
      カテゴリー
    %ul.category1
      - @parents.each do |parent|
        %li.parent__list
          = link_to '#' do
            = parent.name
          %ul.category2
            - parent.children.each do |child|
              %li.child__list
                = link_to '#' do
                  = child.name
                %ul.category3
                  - child.children.each do |grandchild|
                    %li.grandchild__list
                      =link_to '#' do
                        = grandchild.name
  %li.header__contents__lower__left-items__brands
    = link_to '#' do
      ブランド
  %li.header__contents__lower__left-items__detailed-search
    = link_to products_path do
      詳細検索
