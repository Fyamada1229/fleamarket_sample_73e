.header
  .header__contents
    .header__contents__upper
      = link_to '/' do
        = image_tag('material/logo/logo.png', class: 'header__contents__upper__icon')
        = form_with url: '#' do |form|
          = form.text_field :text, class: 'header__contents__upper__input-box', placeholder: 'キーワードから探す'
          %button{type: "submit", class:'header__contents__upper__submit-btn'}
            = icon('fas', 'search')
    .header__contents__lower
      %ul.header__contents__lower__left-items
        %li.header__contents__lower__left-items__categories
          カテゴリー
        %li.header__contents__lower__left-items__brands
          ブランド
      %ul.header__contents__lower__right-items
        %li.header__contents__lower__right-items__login
          = link_to '#' do
            ログイン
        %li.header__contents__lower__right-items__signup
          = link_to '#' do
            新規会員登録