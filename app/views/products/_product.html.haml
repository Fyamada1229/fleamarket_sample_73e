.content
  -# 編集削除ボタン

  = link_to edit_product_path(product) do
    .content__edit-btn
      = "商品#{product.id}を編集する"

  %br

  = link_to product_path(product), method: :delete do
    .content__delete-btn
      = "商品#{product.id}を削除する"

  %hr

  -# 画像
  .content__images
    = "商品#{product.id}の画像"
    %br
    - product.images.each do |image|
      - if image.src.url
        = image_tag image.src.url, size: '100x100'
      - else
        %p
          = image.src.url

  %hr

  -# 商品
  
  .content__name
    = "商品#{product.id}の名前"
    %br
    = "#{product.name}"

  %br

  .content__explain
    = "商品#{product.id}の説明"
    %br
    = "#{product.explain}"

  %hr

  -# 詳細

  .content__condition
    = "商品#{product.id}の状態"
    %br
    = "#{product.condition.name}"

  %hr

  -# 配送

  .content__burden
    = "配送料の負担"
    %br
    = "#{product.costburden.name}"

  %br

  .content__region
    = "発送の地域"
    %br
    = "#{product.shippingorigin.name}"

  %br

  .content__period
    = "発送までの日数"
    %br
    = "#{product.shippingperiod.name}"

  %hr

  -# 価格

  .content__price
    = "販売価格"
    %br
    = converting_to_jpy(product.price)

  %hr
